{
  "name": "Tailscale Codespace",
  "runArgs": [
    "--device=/dev/net/tun"
  ],
  "capAdd": ["NET_ADMIN", "NET_RAW", "MKNOD"],
  "features": {
    "ghcr.io/tailscale/codespace/tailscale": {
      "version": "latest"
    }
  },
  "postCreateCommand": "sudo tailscale up --advertise-exit-node --ssh"
}
